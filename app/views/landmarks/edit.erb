<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<h2>Edits for <%= @landmark.name %></h2>

<form action="/landmarks/<%= @landmark.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
<label>Edit the Landmark Name: </label>
<br>
<input type="text" name="landmark[name]" value="<%= @landmark.name %>" id="name">
<br>
<label>Edit the Year Completed: </label>
<input type="text" name="landmark[year_completed]" value="<%= @landmark.year_completed.to_s %>" id="year_completed">
<input type="submit" value="Edit Landmark">


<a class="button" href="/landmarks">Landmarks</a>
